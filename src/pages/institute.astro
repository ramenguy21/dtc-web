  <!-- Features3 Widget ************** -->

  <Features3
    title="Get in Touch"
    subtitle="We’re here to help and answer any question you might have."
    columns={2}
    items={[
      {
        title: 'Phone',
        icon: 'tabler:phone',
        callToAction: {
          target: '_blank',
          text: 'Call us',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Write to us',
          href: '/',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_self',
        text: 'Get in Touch',
        href: 'tel:+92 335 1313259',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">Be a part of our vision</Fragment>

    <Fragment slot="subtitle">
      Partner with us to support the future of technical education and tap into the growing demand for skilled
