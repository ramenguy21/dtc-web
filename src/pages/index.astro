---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
//import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "Dr. Tasneem's Clinic | Aesthetic Procedures & Integrated Wellness Center",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Appointment',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:heart',
      },
      { text: 'Virtual Consultation', icon: 'tabler:headset', href: '#features' },
    ]}
    image={{
      src: 'https://st.depositphotos.com/1117529/1806/i/950/depositphotos_18067789-stock-photo-equipment-in-cosmetology-clinic.jpg' /**'~/assets/images/hero-image.png'**/,
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">
      Where <span class="hidden xl:inline">Medical Excellence</span>
      <span class="text-accent dark:text-white highlight"> Meets</span> Aesthetic Perfection
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Beautiful results</span> that last,
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Beautiful results.</span>
      because we treat more than skin deep. Where mental wellness amplifies your aesthetic journey.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="What you get with us"
    subtitle="One of the most professional and medically compliant aesthetic clinic in Pakistan"
    items={[
      {
        title: 'Aesthetic Excellence',
        description:
          'Advanced cosmetic procedures tailored to enhance your natural beauty. From dermal fillers to laser treatments, experience transformative results with minimal downtime.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Mental Wellness',
        description:
          'Integrated psychological support and counseling services that complement your aesthetic journey. Because true beauty radiates from within.',
        icon: 'tabler:brain',
      },
      {
        title: 'Patient Education',
        description:
          'Comprehensive consultation and education process. We ensure you understand your treatment options, expected outcomes, and maintenance requirements.',
        icon: 'tabler:notebook',
      },
      {
        title: 'Aftercare Support',
        description:
          'Dedicated follow-up care and support throughout your recovery journey. Our commitment extends well beyond your treatment session.',
        icon: 'tabler:clock-hour-3',
      },
      {
        title: 'Medical Excellence',
        description:
          'State-of-the-art facilities and procedures adhering to international safety standards. Our medical-grade treatments ensure optimal results with maximum safety.',
